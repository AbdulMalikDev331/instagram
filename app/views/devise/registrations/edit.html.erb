<h2>Edit <%= resource_name.to_s.humanize %></h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field pb-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "email-signup" %>
    <span id="signup_email_error"></span>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <div class="field pb-3">
    <%= f.label :username %><br />
    <%= f.text_field :username , autofocus: true, class: "form-control", id:"username-signup" %>
    <span id="signup_username_error"></span>
  </div>
  <div class="field pb-3">
    <%= f.label :fullname %><br />
    <%= f.text_field :fullname, autofocus: true, class: "form-control", id:"fullname-signup"%>
    <span id="signup_fullname_error"></span>
  </div>
  <p class="card-text " >
    <%= f.file_field :profile_pic, accept: 'image/png,image/jpg,image/jpeg' %>
  </p>
  <%= f.submit 'Save', class: "btn btn-success mb-3" %>
  <div class="field pb-3">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id:"password-signup" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
    <span id="signup_password_error"></span>
  </div>
  <div class="field pb-3">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "password-confirm-signup" %>
    <span id="signup_confirm_password_error"></span>
  </div>
  <div class="field pb-3 ">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", id: "password-current-signup" %>
    <span id="signup_current_password_error"></span>
  </div>
  <div class="actions mb-3">
    <%= f.submit "Update my account", class: "btn btn-warning", id: "signup_edit_submit" %>
  </div>
<% end %>
<h3>Cancel my account</h3>
<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
<%= link_to "Back", :back , class: "btn btn-danger"%>
