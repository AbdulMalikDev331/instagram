<h3 class="d-flex justify-content-center mt-5">Stories</h3>
<div class="mt-5" >
  <% @user.stories.each do |story| %>
    <div id="story-<%= story.id %>">
      <div class="mb-1 pl-2"  >
        <div class=" d-flex justify-content-center" >
          <%= image_tag story.storyimage, class: "profile_post_images  " %>
        </div>
        <div class="d-flex justify-content-center" >
          <p class="lead mt-3" ><%=  story.description %></p>
        </div>
      </div>
      <div class="d-flex justify-content-center">
        <% if policy(story).destroy? %>
          <%= link_to "delete story",story_path(story) , method: :delete , remote: true, data: { confirm: 'Are you sure?' }, class:"btn btn-danger ml-2 px-5 mt-2 mb-5"%>
        <% end %>
      </div>
    </div>
  <% end %>
  <div class="mb-5">
    <%= link_to "Dashboard", user_index_path, class:"btn btn-warning px-4 my-5 "%>
  </div>
</div>
