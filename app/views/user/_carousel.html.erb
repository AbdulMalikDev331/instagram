<% if posts.images.size == 1 %>
  <%= image_tag posts.images.first, class:'d-block w-100 images' %>
<% elsif posts.images.size > 1 %>
  <div id="carouselExampleIndicators-<%=posts.id%>" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <% posts.images.size.times do |i| %>
        <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>" class="<%= "active" if i.zero? %>"></li>
      <% end %>
    </ol>
    <div class="carousel-inner">
      <% posts.images.each_with_index do |photo, index| %>
        <div class="carousel-item <%= "active" if index.zero? %>">
          <%= image_tag photo, class:'d-block w-100 images' %>
         </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators-<%=posts.id%>" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators-<%=posts.id%>" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
<% end %>
